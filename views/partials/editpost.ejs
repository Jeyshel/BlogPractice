<form id="<%= formId %>" action="/update-post/<%= post._id %>" method="POST" enctype="multipart/form-data" style="display: none;" class="post-edit-buttons">
    <label for="title">Title:</label>
    <input type="text" id="title-input" name="title" value="<%= post.title %>">
    <label for="content"><br>Content:</label>
    <textarea id="content-input" name="content" style="width: 100%; height: 120px; padding: 5px; font-size: 14px; border: 1px solid #ccc; border-radius: 5px; resize: vertical;"><%= post.content %></textarea>
    <label for="image"><br>Image:</label>
    <input type="file" id="image-input" name="image" accept="image/*" onchange="previewImage(event)">
    <div style="text-align: center; margin-top: 10px;">
        <img id="image-preview" src="#" alt="Image Preview" style="display: none; max-width: 400px; max-height: 400px;">
    </div>
    <button type="submit" class="edit-del-btn">Save</button>
    <!-- Leave unquoted because its a ejs expression-->     
    <button type="button" class="edit-del-btn" onclick="toggleEditMode('<%= formId %>', <%= JSON.stringify(displayElementsIds) %>, '<%= editButtonId %>')">Cancel</button>
</form>