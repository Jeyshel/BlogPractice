<div class="main-content">

    
    <% if (user) { %>
    <div id="myprofile">
        <div id="profile-header">
            <img src=<%= user.picture %>>
            <h1 id="username"><%= user.username %></h1>
            <button id="edit-profile" onclick="editDescription()"> Edit </button>
        </div>

        <div id="profile-info">
            <p id="profile-description"><%= user.description %></p>




            <% posts.forEach(post => { %>
            <h2>Latest Posts:</h2>
            <div class="latest-posts">
                <p><%= post.title %></p>
                <img src=<%= post.images %> alt="Rick">
                <button>
                    <img src="https://w7.pngwing.com/pngs/349/305/png-transparent-computer-icons-internet-forum-comment-miscellaneous-monochrome-black-thumbnail.png" alt="Comment">
                    Comment 
                </button>
                <button> 
                    <img src="img/upvote-icon.svg" alt="Upvote">
                    <%= post.upvotes %>
                </button>
                <button> 
                    <img src="img/downvote-icon.svg" alt="Downvote">
                    <%= post.downvotes %>
                </button>
            </div>
            <% }) %>




            <h2> Comments: </h2>
            <div class="latest-posts">
                <p>MAKE YOU CRY! SAY GOODBYE! TELLING A LIE! HURTING YOU! GIVING YOU UP! LETTING YOU DOWN! GOING AROUND AND DESERTING YOU! replied to Rick Astley</p>
            </div>

        </div>
        
    </div>
    <% } %>
</div>